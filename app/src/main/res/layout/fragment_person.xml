<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_launcher_foreground"/>

            <TextView
                android:id="@+id/person_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"

                android:layout_marginLeft="20dp"
                android:text="登录\注册"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="35dp"
                android:layout_height="95dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop"
                android:background="@color/colorPrimary"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c1c1be" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal" >


            <ImageView
                android:id="@+id/img_dingdan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_wodedingdan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="我的收藏"
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="25dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="165dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:scaleType="centerCrop"
                    android:background="#FFFFFF"/>

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c1c1be" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal" >


            <ImageView
                android:id="@+id/img_dingdang"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_wodedingdan2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="历史记录"
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="25dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="165dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:scaleType="centerCrop"
                    android:background="#FFFFFF"/>

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c1c1be" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal" >


            <ImageView
                android:id="@+id/img_dingdan3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_wodedingdan3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="版本更新"
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="25dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="165dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:scaleType="centerCrop"
                    android:background="#FFFFFF"/>

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c1c1be" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal" >


            <ImageView
                android:id="@+id/img_dingdan4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_wodedingdan4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="关于我们"
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="25dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="165dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:scaleType="centerCrop"
                    android:background="#FFFFFF"/>

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c1c1be" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal" >


            <ImageView
                android:id="@+id/img_dingdan5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_wodedingdan5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="    设     置"
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="25dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="165dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:scaleType="centerCrop"
                    android:background="#FFFFFF"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/person_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理员打开门禁"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/person_scan_zxing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="zxing自带扫描管理员打开门禁"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>